{% extends 'base.html.twig' %}
{% block body %}
    <div class="">
        <div class="col-md-6 offset-md-3">
            <h4 class="m-text26 p-b-36 p-t-15">Sign in</h4>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="bo4 of-hidden size15 m-b-20">
                    <input class="sizefull s-text7 p-l-22 p-r-22" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" />
                </div>

                <div class="bo4 of-hidden size15 m-b-20">
                    <input class="sizefull s-text7 p-l-22 p-r-22" type="password" id="password" name="_password" placeholder="Password"/>
                </div>
                <div class="w-size25">
                    <!-- Button -->
                    <button type="submit" class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
